server {
    listen 80;

    server_name www-local.andaren.com;
    root "/var/www/liweijia/site_andaren_www/service/public";

    index admin.php index.html index.htm index.php;

    charset utf-8;

    access_log /var/log/nginx/www-local.andaren.com-access.log main;
    error_log  /var/log/nginx/www-local.andaren.com-error.log;

    location / {
        try_files $uri $uri/ /admin.php?$query_string;
    }

    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }

    sendfile off;

    client_max_body_size 100m;

    location ~ \.php$ {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass web:9000;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }

    include includes/lwj_proxy;
}
