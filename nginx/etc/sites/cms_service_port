server {
    listen 8080;
    root "/var/www/liweijia/cms-php/service/public";

    index index.html index.htm index.php;

    charset utf-8;
    access_log /var/log/nginx/cmsservice-access.log main;
    error_log  /var/log/nginx/cmsservice-error.log;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
        if ($host ~ webimg-handle.liweijia.com) {
                proxy_pass http://$host&$args;
        }
    }

    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }


    sendfile off;

    client_max_body_size 100m;

    location ~ \.php$ {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass web:9000;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    }
    location /services/ {
       proxy_pass http://admin-staging.liweijia.com/services/;
    }
    location /security {
        proxy_pass http://admin-staging.liweijia.com/security;
    }
}
