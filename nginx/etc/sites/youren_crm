server {
    server_name youren_crm.docker;

    root /var/www/crm-client;
    autoindex on;
    index index.html index.php;

    autoindex_exact_size off;
    autoindex_localtime on;

 location ^~  /upload { proxy_redirect off; proxy_pass http://static.uzee.com; }
    location ^~  /parse { proxy_redirect off; proxy_pass http://static.uzee.com; }
    location ^~  /export { proxy_redirect off; proxy_pass http://static.uzee.com; }
    location ^~  /api { proxy_redirect off; proxy_pass http://api.com; }

#   return 202;

    location ~ .*\.(gif|jpg|jpeg|png|bmp|swf)$
    {
        expires      30d;
    }

    location ~ .*\.(js|css)?$
    {
        expires      12h;
    }

    include includes/php;
}